<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/coin_symbol"
            android:text="BTC"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            app:layout_constraintStart_toEndOf="@id/coin_icon"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/coin_divider"
            android:text="|"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            app:layout_constraintStart_toEndOf="@id/coin_symbol"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/coin_name"
            android:text="BitCoin"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            app:layout_constraintStart_toEndOf="@id/coin_divider"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/coin_sign"
            android:text="$"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            app:layout_constraintStart_toEndOf="@id/priceUsdTxt"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/priceUsdTxt"
            android:text="USD"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/oneHourTxt"
            android:text="1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@id/coin_icon"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"/>

        <TextView
            android:id="@+id/percentChange1hTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/oneHourTxt"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"/>

        <TextView
            android:id="@+id/twentyFourHourTxt"
            android:text="24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toEndOf="@id/percentChange1hTxt"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"/>

        <TextView
            android:id="@+id/percentChange24hTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/twentyFourHourTxt"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"/>

        <TextView
            android:id="@+id/sevenDayTxt"
            android:text="7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toEndOf="@id/percentChange24hTxt"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"/>

        <TextView
            android:id="@+id/percentChange7dTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/sevenDayTxt"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>